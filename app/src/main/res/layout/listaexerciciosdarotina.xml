<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#1F2A38">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Textos -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nome -->
            <TextView
                android:id="@+id/txtNomeExercicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do Exercício"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp" />

            <!-- Grupo -->
            <TextView
                android:id="@+id/txtGrupoMuscular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grupo Muscular"
                android:textColor="#BBBBBB"
                android:textSize="14sp" />

            <!-- Detalhes -->
            <TextView
                android:id="@+id/txtDetalhes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Séries: 4 • Reps: 12 • Peso: 60kg"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Botão de deletar -->
        <ImageButton
            android:id="@+id/btnExcluir"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Excluir exercício"
            android:src="@android:drawable/ic_delete"
            app:tint="#FF4444" />
    </LinearLayout>
</androidx.cardview.widget.CardView>