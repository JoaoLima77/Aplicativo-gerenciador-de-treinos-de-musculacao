<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171a21"
    tools:context=".ui.fragments.ExerciciosFragment">

    <EditText
        android:id="@+id/edtTxtPesquisa"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:backgroundTint="#FFFFFF"
        android:hint="@string/buscar_exerc_cio_por_nome"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#BBBBBB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.097" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exerciciosRecyclerView"
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/lista_de_exerc_cios"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTxtPesquisa"
        app:layout_constraintVertical_bias="0.087" />

    <Button
        android:id="@+id/btnAddExercicio"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="#006DE7"
        android:text="@string/botao_adicionar"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85" />
</androidx.constraintlayout.widget.ConstraintLayout>
