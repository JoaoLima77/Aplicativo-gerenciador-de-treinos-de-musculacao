<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="#1b2838"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#1b2838">

        <LinearLayout
            android:id="@+id/infoLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btneditarexerciciorotina"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/nomeExercicioText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nome_do_exerc_cio"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/grupoMuscularText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/grupo_muscular"
                android:textColor="#CCCCCC"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btneditarexerciciorotina"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/exercicios_editar"
            android:src="@android:drawable/ic_menu_edit"
            app:tint="#3CD548"
            app:layout_constraintEnd_toStartOf="@id/btnDeletarexerciciorotina"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btnDeletarexerciciorotina"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/excluir_exercicio"
            app:srcCompat="@android:drawable/ic_delete"
            app:tint="#F44336"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
